    <main>
        <div id="errorMessage" class="error-message" style="display: none;"></div>
        
        <div class="markets-grid" id="marketsGrid">
            <!-- Market cards will be dynamically generated -->
        </div>

        <div class="overview-section">
            <div class="overview-header">
                <h2 class="overview-title">Global Market Overview</h2>
                <div class="time-filters">
                    <button class="time-filter" data-period="1D">1D</button>
                    <button class="time-filter active" data-period="1W">1W</button>
                    <button class="time-filter" data-period="1M">1M</button>
                    <button class="time-filter" data-period="3M">3M</button>
                    <button class="time-filter" data-period="1Y">1Y</button>
                </div>
            </div>
            
            <div class="main-chart-container">
                <canvas id="mainChart"></canvas>
            </div>

            <div class="stats-grid">
                <div class="stat-card">
