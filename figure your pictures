                    <div class="stat-value" id="totalVolume">$0</div>
                </div>
                <div class="stat-card">
                    <div class="stat-label">Market Cap</div>
                    <div class="stat-value" id="marketCap">$0</div>
                </div>
                <div class="stat-card">
                    <div class="stat-label">Active Markets</div>
                    <div class="stat-value" id="activeMarkets">0</div>
                </div>
                <div class="stat-card">
                    <div class="stat-label">Avg. Change</div>
                    <div class="stat-value" id="avgChange">0%</div>
                </div>
            </div>
        </div>
    </main>

    <script>
        // Market data structure with real symbols
        const markets = [
            { id: 'sp500', name: 'S&P 500', symbol: 'SPY', icon: 'fa-chart-bar' },
            { id: 'nasdaq', name: 'NASDAQ', symbol: 'QQQ', icon: 'fa-microchip' },
            { id: 'dow', name: 'Dow Jones', symbol: 'DIA', icon: 'fa-industry' },
            { id: 'nyse', name: 'NYSE', symbol: 'NYA', icon: 'fa-building' },
            { id: 'ftse', name: 'FTSE 100', symbol: 'UKX', icon: 'fa-crown' },
            { id: 'nikkei', name: 'Nikkei 225', symbol: 'NKY', icon: 'fa-yen-sign' }
        ];

        // Initialize market data
        const marketData = {};
        markets.forEach(market => {
            marketData[market.id] = {
                ...market,
                currentValue: 0,
                change: 0,
                changePercent: 0,
                history: [],
                lastUpdated: null
            };
        });

        // API Configuration
        let apiKey = localStorage.getItem('alphaVantageApiKey') || '';
        const API_BASE_URL = 'https://www.alphavantage.co/query';

        // Check for API key
        function checkApiKey() {
            if (!apiKey) {
                showApiKeyPrompt();
                return false;
            }
            return true;
        }

        // Show API key prompt
        function showApiKeyPrompt() {
            const grid = document.getElementById('marketsGrid');
            grid.innerHTML = `
                <div style="grid-column: 1/-1; text-align: center; padding: 3rem;">
                    <h3 style="margin-bottom: 1rem;">API Key Required</h3>
                    <p style="margin-bottom: 1.5rem; color: #94a3b8;">
                        <span class="brand-highlight">AKRAM JOES GLOBAL MARKET ANALYZER</span> requires a free Alpha Vantage API key to display real market data.
                    </p>
                    <div class="api-key-section" style="display: flex; align-items: center; justify-content: center; gap: 0.5rem;">
                        <input type="text" 
                               class="api-key-input" 
                               id="apiKeyInput" 
                               placeholder="Enter your API key"
                               maxlength="20">
                        <button class="save-key-btn" onclick="saveApiKey()">Save Key</button>
                    </div>
                    <p style="margin-top: 1rem; font-size: 0.9rem; color: #94a3b8;">
                        Get your free API key at: <a href="https://www.alphavantage.co/support/#api-key" target="_blank" style="color: #4ade80;">alphavantage.co</a>
                    </p>
                </div>
            `;
        }

        // Save API key
        function saveApiKey() {
            const input = document.getElementById('apiKeyInput');
            if (input && input.value) {
                apiKey = input.value.trim();
                localStorage.setItem('alphaVantageApiKey', apiKey);
                initializeDashboard();
            }
        }

        // Fetch real market data
        async function fetchMarketData(symbol) {
            try {
                const response = await fetch(`${API_BASE_URL}?function=GLOBAL_QUOTE&symbol=${symbol}&apikey=${apiKey}`);
                const data = await response.json();
                
                if (data['Global Quote'] && data['Global Quote']['05. price']) {
                    const quote = data['Global Quote'];
                    return {
                        price: parseFloat(quote['05. price']),
                        change: parseFloat(quote['09. change']),
                        changePercent: parseFloat(quote['10. change percent'].replace('%', ''))
                    };
                } else if (data['Error Message']) {
                    throw new Error(data['Error Message']);
                } else {
                    throw new Error('Invalid API response');
                }
            } catch (error) {
                console.error('Error fetching market data:', error);
                throw error;
            }
        }

        // Fetch historical data
        async function fetchHistoricalData(symbol, period = '1W') {
            try {
                let interval = '60min';
                let outputsize = '24';
                
                if (period === '1D') {
                    interval = '5min';
                    outputsize = '78';
                } else if (period === '1W') {
                    interval = '60min';
                    outputsize = '168';
                } else if (period === '1M') {
                    interval = 'daily';
                    outputsize = '30';
                } else if (period === '3M') {
                    interval = 'daily';
                    outputsize = '90';
                } else if (period === '1Y') {
                    interval = 'daily';
                    outputsize = '365';
                }
                
                const response = await fetch(`${API_BASE_URL}?function=TIME_SERIES_INTRADAY&symbol=${symbol}&interval=${interval}&outputsize=${outputsize}&apikey=${apiKey}`);
                const data = await response.json();
                
                if (data[`Time Series (${interval})`]) {
                    const timeSeries = data[`Time Series (${interval})`];
                    const history = [];
                    
                    Object.keys(timeSeries).slice(0, 50).reverse().forEach(time => {
                        history.push(parseFloat(timeSeries[time]['4. close']));
                    });
                    
                    return history;
                } else {
                    throw new Error('No historical data available');
                }
            } catch (error) {
                console.error('Error fetching historical data:', error);
                return [];
            }
        }

        // Update markets with real data
        async function updateMarkets() {
            if (!checkApiKey()) return;
            
            try {
                const promises = markets.map(async (market) => {
                    try {
                        const data = await fetchMarketData(market.symbol);
                        marketData[market.id] = {
                            ...marketData[market.id],
                            currentValue: data.price,
                            change: data.change,
                            changePercent: data.changePercent,
                            lastUpdated: new Date()
                        };
                        
                        // Fetch historical data
                        const history = await fetchHistoricalData(market.symbol);
                        if (history.length > 0) {
                            marketData[market.id].history = history;
                        }
                    } catch (error) {
                        console.error(`Error updating ${market.name}:`, error);
                    }
                });
                
                await Promise.all(promises);
                
                renderMarketCards();
                updateMainChart();
                updateStats();
                updateLastUpdateTime();
                hideError();
            } catch (error) {
                showError('Failed to fetch market data. Please check your API key.');
            }
        }

        // Render market cards
        function renderMarketCards() {
            const grid = document.getElementById('marketsGrid');
            grid.innerHTML = '';
            
            markets.forEach(market => {
                const data = marketData[market.id];
                const isPositive = data.change >= 0;
                
                const card = document.createElement('div');
                card.className = 'market-card';
                card.innerHTML = `
                    <div class="market-header">
                        <div class="market-name">
                            <div class="market-icon">
                                <i class="fas ${market.icon}"></i>
                            </div>
                            <span>${market.name}</span>
                        </div>
                    </div>
                    <div class="market-value">${formatNumber(data.currentValue)}</div>
                    <div class="market-change ${isPositive ? 'positive' : 'negative'}">
                        <i class="fas fa-arrow-${isPositive ? 'up' : 'down'}"></i>
                        <span>${Math.abs(data.changePercent).toFixed(2)}%</span>
                        <span>(${formatNumber(Math.abs(data.change))})</span>
                    </div>
                    <div class="chart-container">
                        <canvas id="chart-${market.id}"></canvas>
                    </div>
                `;
                
                grid.appendChild(card);
                
                // Create mini chart
                setTimeout(() => {
                    if (data.history.length > 0) {
                        createMiniChart(market.id, data.history, isPositive);
                    }
                }, 100);
            });
        }

        // Create mini chart for each market
        function createMiniChart(marketId, history, isPositive) {
            const ctx = document.getElementById(`chart-${marketId}`);
            if (!ctx) return;
            
            const gradient = ctx.getContext('2d').createLinearGradient(0, 0, 0, 150);
            gradient.addColorStop(0, isPositive ? 'rgba(74, 222, 128, 0.3)' : 'rgba(248, 113, 113, 0.3)');
            gradient.addColorStop(1, 'rgba(74, 222, 128, 0)');
            
            new Chart(ctx, {
                type: 'line',
                data: {
                    labels: Array(history.length).fill(''),
                    datasets: [{
                        data: history,
                        borderColor: isPositive ? '#4ade80' : '#f87171',
                        backgroundColor: gradient,
                        borderWidth: 2,
                        fill: true,
                        tension: 0.4,
                        pointRadius: 0,
                        pointHoverRadius: 0
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { display: false },
                        tooltip: { enabled: false }
                    },
                    scales: {
                        x: { display: false },
                        y: { display: false }
                    }
                }
            });
        }

        // Main chart
        let mainChart;
        function createMainChart() {
            const ctx = document.getElementById('mainChart').getContext('2d');
            
            const datasets = markets.map((market, index) => {
                const data = marketData[market.id];
                const colors = [
                    '#4ade80', '#22d3ee', '#a78bfa', '#f59e0b', '#ef4444', '#ec4899'
                ];
                
                return {
                    label: market.name,
                    data: data.history,
                    borderColor: colors[index],
                    backgroundColor: colors[index] + '20',
                    borderWidth: 2,
                    fill: false,
                    tension: 0.4,
                    pointRadius: 0,
                    pointHoverRadius: 5
                };
            });
            
            mainChart = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: Array(50).fill('').map((_, i) => `${i}`),
                    datasets: datasets
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    interaction: {
                        mode: 'index',
                        intersect: false
                    },
                    plugins: {
                        legend: {
                            display: true,
                            position: 'top',
                            labels: {
                                color: '#fff',
                                padding: 20,
                                font: { size: 12 }
                            }
                        },
                        tooltip: {
                            backgroundColor: 'rgba(0, 0, 0, 0.8)',
                            titleColor: '#fff',
                            bodyColor: '#fff',
                            borderColor: 'rgba(255, 255, 255, 0.1)',
                            borderWidth: 1,
                            padding: 12,
                            displayColors: true,
                            callbacks: {
                                label: function(context) {
                                    return context.dataset.label + ': $' + context.parsed.y.toFixed(2);
                                }
                            }
                        }
                    },
                    scales: {
                        x: {
                            grid: {
                                color: 'rgba(255, 255, 255, 0.05)',
                                borderColor: 'rgba(255, 255, 255, 0.1)'
                            },
                            ticks: {
                                color: '#94a3b8',
                                maxRotation: 0
                            }
                        },
                        y: {
                            grid: {
                                color: 'rgba(255, 255, 255, 0.05)',
                                borderColor: 'rgba(255, 255, 255, 0.1)'
                            },
                            ticks: {
                                color: '#94a3b8',
                                callback: function(value) {
                                    return '$' + value.toFixed(2);
                                }
                            }
                        }
                    }
                }
            });
        }

        // Update main chart
        function updateMainChart() {
            if (!mainChart) return;
            
            mainChart.data.datasets.forEach((dataset, index) => {
                dataset.data = marketData[markets[index].id].history;
            });
            
            mainChart.update('none');
        }

        // Update statistics
        function updateStats() {
            let totalVolume = 0;
            let totalChange = 0;
            let validMarkets = 0;
            
            markets.forEach(market => {
                const data = marketData[market.id];
                if (data.currentValue > 0) {
                    totalVolume += data.currentValue * 1000; // Simulated volume
                    totalChange += data.changePercent;
                    validMarkets++;
                }
            });
            
            document.getElementById('totalVolume').textContent = formatNumber(totalVolume);
            document.getElementById('marketCap').textContent = formatNumber(totalVolume * 10);
            document.getElementById('activeMarkets').textContent = validMarkets;
            document.getElementById('avgChange').textContent = (totalChange / validMarkets || 0).toFixed(2) + '%';
            
            // Color code average change
            const avgChangeElement = document.getElementById('avgChange');
            avgChangeElement.className = totalChange >= 0 ? 'stat-value positive' : 'stat-value negative';
        }

        // Format numbers
        function formatNumber(num) {
            if (num >= 1e9) {
                return '$' + (num / 1e9).toFixed(2) + 'B';
            } else if (num >= 1e6) {
                return '$' + (num / 1e6).toFixed(2) + 'M';
            } else if (num >= 1e3) {
                return '$' + (num / 1e3).toFixed(2) + 'K';
            }
            return '$' + num.toFixed(2);
        }

        // Update last update time
        function updateLastUpdateTime() {
            const now = new Date();
            const timeString = now.toLocaleTimeString('en-US', { 
                hour: '2-digit', 
                minute: '2-digit',
                second: '2-digit'
            });
            document.getElementById('lastUpdate').textContent = `Last update: ${timeString}`;
        }

        // Show error message
        function showError(message) {
            const errorDiv = document.getElementById('errorMessage');
            errorDiv.textContent = message;
            errorDiv.style.display = 'block';
        }

        // Hide error message
        function hideError() {
            document.getElementById('errorMessage').style.display = 'none';
        }

        // Time filter buttons
        document.querySelectorAll('.time-filter').forEach(button => {
            button.addEventListener('click', async function() {
                document.querySelectorAll('.time-filter').forEach(b => b.classList.remove('active'));
                this.classList.add('active');
                
                const period = this.dataset.period;
                
                // Fetch new historical data for all markets
                const promises = markets.map(async (market) => {
                    try {
                        const history = await fetchHistoricalData(market.symbol, period);
                        if (history.length > 0) {
                            marketData[market.id].history = history;
                        }
                    } catch (error) {
                        console.error(`Error fetching historical data for ${market.name}:`, error);
                    }
                });
                
                await Promise.all(promises);
                
                renderMarketCards();
                updateMainChart();
            });
        });

        // Initialize dashboard
        async function initializeDashboard() {
            if (checkApiKey()) {
                await updateMarkets();
                createMainChart();
            }
        }

        // Start the dashboard
        initializeDashboard();

        // Auto-update every 30 seconds (respecting API rate limits)
        setInterval(updateMarkets, 30000);
    </script>
</body>
</html>
